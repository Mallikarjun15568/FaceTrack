# ==============================================
# FACETRACK PRO - ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your values

# --- SECURITY (REQUIRED) ---
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars

# --- DATABASE CONFIGURATION (REQUIRED) ---
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password_here
DB_NAME=facetrack_db

# --- FACE RECOGNITION SETTINGS ---
# Threshold for face matching (0.0-1.0, higher = more strict)
EMBED_THRESHOLD=0.75
# Recognition provider: CPU or CUDAExecutionProvider
RECOGNITION_PROVIDER=CPU

# --- APP SETTINGS ---
# development or production
APP_MODE=development
DEBUG=False

# --- KIOSK SETTINGS ---
# Cooldown in seconds between attendance marks for same employee
KIOSK_COOLDOWN_SECONDS=5
# Cooldown for unknown face detection
KIOSK_UNKNOWN_COOLDOWN=3

# --- FILE UPLOAD ---
UPLOAD_FOLDER=static/uploads
MAX_FILE_SIZE=5242880

# --- SESSION SETTINGS ---
# Session timeout in seconds (3600 = 1 hour)
PERMANENT_SESSION_LIFETIME=3600

# --- EMAIL CONFIGURATION (OPTIONAL) ---
# SMTP settings for notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password-here
SENDER_NAME=FaceTrack Pro

# --- SERVER SETTINGS ---
PORT=5000
HOST=0.0.0.0

# --- SNAPSHOT SETTINGS ---
# Save attendance snapshots: 1 (enabled) or 0 (disabled)
SAVE_SNAPSHOTS=1
SNAPSHOT_DIR=static/snapshots

# --- LOGGING ---
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
